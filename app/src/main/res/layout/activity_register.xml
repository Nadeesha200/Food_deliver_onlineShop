<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".registerActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="236dp"
        android:layout_height="213dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="81dp"
        android:contentDescription="@string/profi_image_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profi" />

    <Button
        android:id="@+id/sign_i"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/round_btn"
        android:text="signin"
        android:textColor="@color/darker"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/g_register"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="119dp"
        android:background="@drawable/round_btn"
        android:text="get_register"
        android:textColor="@color/darker"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tx2"
        android:layout_width="339dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="268dp"
        android:ems="10"
        android:hint="Enetr here"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@color/platinum"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="349dp"
        android:text="Password"
        android:textColor="@color/platinum"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/tx2"
        android:layout_width="335dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="427dp"
        android:ems="10"
        android:hint="Enter here email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@color/platinum"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="195dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="512dp"
        android:text="Email"
        android:textColor="@color/platinum"
        android:textSize="24sp" />

</RelativeLayout>